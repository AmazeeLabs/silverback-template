{
  "name": "@custom/ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./intl": [
      "./build/utils/intl/index.js"
    ],
    "./routes/*": [
      "./build/components/routes/*.js"
    ]
  },
  "typesVersions": {
    "*": {
      "routes/*": [
        "build/components/routes/*.d.ts"
      ],
      "intl": [
        "build/utils/intl/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rm -rf build && pnpm build:scripts && pnpm build:styles && pnpm build:i18n",
    "build:scripts": "swc ./src -d ./build && tsc --emitDeclarationOnly",
    "build:styles": "NODE_ENV=production pnpm postcss tailwind.css -o build/styles.css",
    "build:i18n": "formatjs extract 'src/**/*.ts*' --ignore='**/*.d.ts' --ignore='**/*.stories.ts*' --out-file build/translatables.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'\n",
    "dev": "storybook dev -p 6006",
    "serve": "serve storybook-static -p 6006",
    "build-storybook": "storybook build",
    "test:static": "tsc --noEmit && eslint \"**/*.{ts,tsx,js,jsx}\" --ignore-path=\"./.gitignore\" --fix",
    "test:unit": "vitest run --passWithNoTests",
    "test:storybook": "test-storybook --coverage",
    "test:integration": "storybook build && start-test serve http://localhost:6006 test:storybook && pnpm report",
    "report": "nyc report --reporter=lcov -t coverage/storybook --report-dir coverage/storybook"
  },
  "dependencies": {
    "@custom/schema": "workspace:*",
    "@amazeelabs/scalars": "^1.1.0",
    "clsx": "^1.2.1",
    "react-intl": "^6.3.2",
    "@heroicons/react": "^2.0.16",
    "@headlessui/react": "^1.7.13"
  },
  "peerDependencies": {
    "react": "experimental",
    "react-dom": "experimental"
  },
  "devDependencies": {
    "react": "experimental",
    "react-dom": "experimental",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.23",
    "tailwindcss": "^3.1.8",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.8",
    "cssnano": "^5.1.13",
    "@formatjs/cli": "^6.0.4"
  },
  "optionalDependencies": {
    "@storybook/addon-essentials": "next",
    "@storybook/addon-actions": "next",
    "@storybook/addon-interactions": "next",
    "@storybook/addon-links": "next",
    "@storybook/blocks": "next",
    "@storybook/react": "next",
    "@storybook/react-vite": "next",
    "@storybook/testing-library": "next",
    "@storybook/test-runner": "next",
    "@storybook/addon-coverage": "^0.0.8",
    "serve": "^14.2.0",
    "start-server-and-test": "^2.0.0",
    "storybook": "next",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "@types/react-body-classname": "^1.1.7",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "eslint-plugin-formatjs": "^4.9.0",
    "eslint-plugin-storybook": "^0.6.11",
    "nyc": "^15.1.0",
    "vite-plugin-turbosnap": "^1.0.1"
  }
}
