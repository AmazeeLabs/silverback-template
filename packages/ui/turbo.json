{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "pipeline": {
    "prep:scripts": {
      "dependsOn": ["^prep"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".swcrc",
        "tsconfig.json",
        "static/public/**"
      ],
      "outputs": [
        "build/**/*.js",
        "../../apps/cms/autoload.json",
        "../../apps/website/autoload.mjs"
      ]
    },
    "prep:types": {
      "dependsOn": ["^prep"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
      "outputs": ["build/**/*.d.ts"]
    },
    "prep:styles": {
      "inputs": [
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/components/**/*tsx"
      ],
      "outputs": ["build/styles.css"]
    },
    "prep:cms-css": {
      "inputs": ["postcss.config.cjs", "tailwind.config.cjs", "cms.css"],
      "outputs": ["../drupal-themes/custom_iframe/styles.css"]
    },
    "prep:gutenberg": {
      "inputs": [
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/components/**/*tsx"
      ],
      "outputs": ["build/gutenberg.css"]
    },
    "prep:i18n": {
      "inputs": ["src/components/**/*.tsx"],
      "outputs": ["build/translatables.json"]
    },
    "prep": {
      "dependsOn": [
        "prep:types",
        "prep:scripts",
        "prep:styles",
        "prep:cms-css",
        "prep:gutenberg",
        "prep:i18n"
      ]
    },
    "build": {
      "dependsOn": ["@custom/cms#prep"],
      "inputs": [
        ".storybook/**",
        "postcss.config.cjs",
        "tailwind.config.cjs",
        "tailwind.css",
        "src/**/*.css",
        "src/**/*.tsx",
        "src/**/*.ts",
        "static/**"
      ],
      "outputs": ["storybook-static/**"]
    },
    "test:integration": {
      "outputs": ["coverage/**"]
    }
  }
}
